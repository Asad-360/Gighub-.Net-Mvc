@model IEnumerable<GigHub.Models.Gig>

@{
    ViewBag.Title = "title";
}

<h2>My Upcoming Gigs</h2>

<ul class="gigs voffset4">
    @foreach (var gig in Model)
    {
        <li>
            <div class="date">
                <div class="month">
                    @gig.DateTime.ToString("MMM")
                </div>
                <div class="day">
                    @gig.DateTime.ToString("dd")
                </div>
            </div>

            <div class="details">
                <span class="artist">
                    @gig.Artist.Name
                </span>
                <span class="genre">
                    @gig.Venue
                </span>
            </div>
        </li>
    }
</ul>
