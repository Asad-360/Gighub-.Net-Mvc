@model GigHub.Core.ViewModels.GigFormViewModel
@{
    ViewBag.Title = Model.Heading;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Heading</h2>
@using (Html.BeginForm(Model.Action, "Gigs"))
{
    @Html.AntiForgeryToken()
    <p class="alert alert-info">All fields are <strong>required</strong></p>
    <div class="form-group">
        @Html.LabelFor(g => g.Venue)
        @Html.TextBoxFor(g => g.Venue, new { @class = "form-control", autofocus = "autofocus", placeholder = "Islamabad" })
        @Html.ValidationMessageFor(g => g.Venue)
    </div>
    <div class="form-group">
        @Html.LabelFor(g => g.Date)
        @Html.TextBoxFor(g => g.Date, new { @class = "form-control" , placeholder = "1 Jan 2018" })
        @Html.ValidationMessageFor(g => g.Date)
    </div>
    <div class="form-group">
        @Html.LabelFor(g => g.Time)
        @Html.TextBoxFor(g => g.Time, new { @class = "form-control", placeholder = "20:00" })
        @Html.ValidationMessageFor(g => g.Time)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Genre)
        @Html.DropDownListFor(m => m.Genre, new SelectList(Model.Genres, "Id", "Name"), "Select Genre From The List.", new { @class = "form-control" })
        @Html.ValidationMessageFor(g => g.Genre)
    </div>
    @Html.HiddenFor(g => g.Id)
    <button type="submit" value="save" class="btn btn-primary btn-lg">Save</button>

}
@section scripts
{
    @Scripts.Render("~/bundles/jqueryval")
}
