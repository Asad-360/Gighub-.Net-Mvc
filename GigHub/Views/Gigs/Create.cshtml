@model GigHub.ViewModels.GigFormViewModel
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Create</h2>

<form>
    <div class="form-group">
        @Html.LabelFor(g => g.Venue)
        @Html.TextBoxFor(g => g.Venue, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(g => g.Date)
        @Html.TextBoxFor(g => g.Date, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(g => g.Time)
        @Html.TextBoxFor(g => g.Time, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m=>m.Genre)
        @Html.DropDownListFor(m=>m.Genre , new SelectList(Model.Genres , "Id" , "Name"),"Select Genre From The List." , new {@class="form-control"})
    </div>
    <button type="submit" value="save" class="btn btn-primary">Save</button>
</form>