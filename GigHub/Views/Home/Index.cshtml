
@model IEnumerable<GigHub.Models.Gig>
@{
    ViewBag.Title = "Home Page";
}

<ul class="gigs">
    @foreach (var gig in Model)
    {
        <li>
            <div class="date">
                <div class="month">
                    @gig.DateTime.ToString("MMM")
                </div>
                <div class="day">
                    @gig.DateTime.ToString("dd")
                </div>
            </div>
            <div class="details">
                <span class="artist">
                    @gig.Artist.Name
                    <button data-following-id="@gig.ArtistId" class="btn btn-link js-toggle-following">Follow</button>
                </span>

                <span class="genre">
                    @gig.Genre.Name
                </span>
                <button data-gig-id="@gig.Id" class="btn btn-default btn-sm pull-right js-toggle-attendence">Going?</button>
            </div>
        </li>
    }
</ul>


@section scripts
{
    <script>
        $(document).ready(function() {
            
            $(".js-toggle-attendence").click(function(e) {
                var button = $(e.target);
                $.post("/api/attendences", { GigId: button.attr("data-gig-id") }).done(function ()
                {
                button
                    .removeClass("btn-default")
                    .addClass("btn-info")
                    .text("Going");
                })
                    .fail(function () {
                alert("Something unexpected happens");
            });

            });



            $(".js-toggle-following").click(function (e) {
                var button = $(e.target);
                alert('Ths follower Id =' + button.attr("data-following-id"));
                $.post("/api/followings", { "": button.attr("data-following-id") }).done(function ()
                {
                   
                button
                    .text("Followings");
            }).fail(function() {
                alert("Something unexpected happens");
            });
            });



    });
    </script>
}
