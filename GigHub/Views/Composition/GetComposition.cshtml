@model IEnumerable<GigHub.Core.Models.Composition>

@{
    ViewBag.Title = "GetComposition";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>GetComposition</h2>

<p>
    @Html.ActionLink("Upload New Composition", "Index",null , new { @class="btn btn-primary"})
</p>
@if (Model != null && Model.Count() > 0)
{
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FilePath)
        </th>
        <th>
            Action
        </th>
    </tr>
    @foreach (var item in Model)
    {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.Name)
    </td>
    <td>
        <audio controls id="audio" preload="none" controlsList="nodownload">
            <source src="@Url.Content(item.FilePath)" type="audio/ogg" />
        </audio>
    </td>
    <td>
        @Html.ActionLink("Delete", "Delete", new { id = item.ID })
    </td>
</tr>
}

</table>
}
else{ 
    <p>You Haven't Produced Any Composition.</p>
}

